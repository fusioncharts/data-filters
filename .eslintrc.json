{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "globals": {
    	"FusionCharts": true,
    	"GrowthAnalyser": true,
        "MultiCharting": true,
        "FCDataFilterExt": true,
        "FilterVisual": true
    },
    "rules": {
    	"one-var": ["error", "always"],
    	"unused-vars": ["warn"],
    	"semi": ["error", "always"],
        "no-unused-vars": ["warn"]
    }
}